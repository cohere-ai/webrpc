        {{- $outputVar = "&out"}}
        out := struct {
          {{- range $i, $output := .Outputs}}
            Ret{{$i}} {{$output | methodArgType}} `json:"{{$output.Name | downcaseName}}"`
          {{- end}}
        }{}
        {{- end}}
        _, err := clientRequest(ctx, c.client, c.urls[{{$i}}], {{$inputVar}}, {{$outputVar}})
        return {{argsList .Outputs "out.Ret"}}{{commaIfLen .Outputs}} err
      {{- end}}
    }
  {{end}}
